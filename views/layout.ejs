<body>

<!-- SEARCH BAR -->
<div id="nav">
	<div id="logo-div">
		<p>#VIRAL</p>
	</div>
	<div id="twit_search">
		<form role="form" id="search-form">
			<div class="form-group" id="search-bar">
				<input type="text" name="search" class="form-control" id="search" value="" placeholder="Bananas" />
			</div>
			<button id="search-button">Gimme!</button>
		</form>
	</div>
	<div id="link-to">
		<% if(user != undefined) { %>
				<p>
					<%= user.fb.email %>
				</p>
				<a href="/logout">Logout</a>
			<% } else { %> 
				<a href="/auth/facebook"><i class="fa fa-facebook-official fa-3x"></i></a>
		<% } %>
	</div>			
</div>


<!-- RENDER FEEDS -->
	<img src="images/film.png" style="z-index: -1" class="film"/>

	<ul id="scene">
	<!-- TWEETS -->	
	  <li class="layer t" data-depth="0.10" id="one"></li>
	  <li class="layer t" data-depth="0.20" id="two"></li>
	  <li class="layer t" data-depth="0.40" id="three"></li>
	  <li class="layer t" data-depth="0.60" id="four"><li>
	  <li class="layer t" data-depth="0.80" id="five"></li>
	  <li class="layer t" data-depth="1.00" id="six"></li>

	  <!-- GRAMS -->
	  <li class="layer i" data-depth="0.30" id="gram1"></li>
	  <li class="layer i" data-depth="0.50" id="gram2"></li>
	  <li class="layer i" data-depth="0.30" id="gram3"></li>
	</ul>


<script src="//cdnjs.cloudflare.com/ajax/libs/parallax/1.1.1/jquery.parallax.min.js"></script>
<script src="//code.jquery.com/ui/1.11.3/jquery-ui.js"></script>
<script src="js/main.js"></script>

<!-- TWITTER MODAL -->
<div id="twitterModal" class="modal fade" role="dialog">
	<div class="modal-dialog">

<!--     Modal content -->
	    <div class="modal-content">
			<div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal">&times;</button>
		        <h4 class="modal-title">Twitter</h4>
			</div>
			<div class="modal-body">
				<div>
					<h2 id="tweetText">Text from the tweet! #TweetText</h2>
					<h4><a href="#">Username</a></h4>
				</div>
			</div>
			<div class="modal-footer">

			</div>
	    </div>

	</div>
</div>

<!-- INSTAGRAM MODAL -->
<div id="instaModal" class="modal fade" role="dialog">
	<div class="modal-dialog">

<!--     Modal content -->
	    <div class="modal-content">
			<div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal">&times;</button>
		        <h4 class="modal-title">Twitter</h4>
			</div>
			<div class="modal-body">
				<div>
					<h2 id="tweetText">Text from the tweet! #TweetText</h2>
					<h4><a href="#">Username</a></h4>
				</div>
			</div>
			<div class="modal-footer">
				
			</div>
	    </div>

	</div>
</div>

