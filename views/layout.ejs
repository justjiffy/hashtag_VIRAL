<!DOCTYPE html>
<html>
<head>
	<title>OAuth App</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,700italic,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
	<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="css/main.css">
</head>
<body>

<!-- SEARCH BAR -->
<div id="nav">
	<div id="logo-div">
		<p><img src="images/viral.png" width="100%" /></p>
	</div>
	<div id="twit_search">
		<form role="form" id="search-form">
			<div class="form-group" id="search-bar">
				<input type="text" name="search" class="form-control" id="search" value="" placeholder="Bananas" />
			</div>
			<button id="search-button">Gimme!</button>
		</form>
	</div>
		<div id="link-to" style="float: right">
			<a style="margin-right: 25px" href=""><i class="fa fa-user fa-3x"></i></a>
			<a style="margin-right: 25px" href=""><i class="fa fa-heart fa-3x"></i></a>
				<% if(user != undefined) { %>
					<p style="display:inline; font-size: 28px; font-weight: bold; color: white;">
						Hey <%= user.fb.firstName %>!!
					</p>
					<a href="/logout"><i class="fa fa-times fa-3x"></i></a>
				<% } else { %> 
					<a href="/auth/facebook"><i class="fa fa-facebook-official fa-3x"></i></a>
				<% } %>
		</div>			
</div>


<!-- RENDER FEEDS -->
	<img src="images/film.png" style="z-index: -1" class="film"/>

	<ul id="scene">
	<!-- TWEETS -->	
	  <li class="layer t" data-depth="0.90" id="one"></li>
	  <li class="layer t" data-depth="0.40" id="two"></li>
	  <li class="layer t" data-depth="0.80" id="three"></li>
	  <li class="layer t" data-depth="0.70" id="four"><li>
	  <li class="layer t" data-depth="0.60" id="five"></li>
	  <li class="layer t" data-depth="0.10" id="six"><img id="mascot" src="images/mascot.png" width="20%" /></li>

	  <!-- GRAMS -->
	  <li class="layer i" data-depth="0.70" id="gram1"></li>
	  <li class="layer i" data-depth="0.60" id="gram2"></li>
	  <li class="layer i" data-depth="0.70" id="gram3"></li>

	  <!-- TUBES -->
	  <li class="layer y" data-depth="0.35" id="tube1"></li>
  	  <li class="layer y" data-depth="0.45" id="tube2"></li>
  	  <li class="layer y" data-depth="0.55" id="tube3"></li>

	</ul>


<!-- TWITTER MODAL -->
<div id="twitterModal" class="modal fade" role="dialog">
	<div class="modal-dialog">

<!--     Modal content -->
	    <div class="modal-content">
			<div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal">&times;</button>
		        <h3 class="modal-title"><img style="width:40px;height:40px" src="images/bird.png"> Twitter</h3>
			</div>
			<div class="modal-body">
				<div>
					<h4><div id="twitProfilePic" style="display:inline"></div>
					<div id="twitUser" style="display:inline"></div></h4>
					<h2 id="tweetText"></h2>
				</div>
			</div>
			<div class="modal-footer">

			</div>
	    </div>

	</div>
</div>

<!-- INSTAGRAM MODAL -->
<div id="instaModal" class="modal fade" role="dialog">
	<div class="modal-dialog">

<!--     Modal content -->
	    <div class="modal-content">
			<div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal">&times;</button>
		        <h3 class="modal-title"><img style="width:40px;height:40px" src="images/camera.png"> Instagram</h3>
			</div>
			<div class="modal-body">
				<h4><div id="gramUserProfilePic" style="display:inline">
				</div>
				<div id="gramUser" style="display:inline"></div></h4>
				<div id="gram-pic" style="text-align:center">
				</div>
				<h3 id="gramCaption"></h3>
			</div>
			<div class="modal-footer">
				
			</div>
	    </div>

	</div>
</div>

<!-- YOUTUBE MODAL -->
<div id="youtubeModal" class="modal fade" role="dialog">
	<div class="modal-dialog">

<!--     Modal content -->
	    <div class="modal-content">
			<div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal">&times;</button>
		        <h3 class="modal-title"><img style="width:40px;height:40px" src="images/film.png"> YouTube</h3>
			</div>
			<div class="modal-body">
				<div id="modalVideo" style="text-align:center"></div>
				<h3 id="videoTitle"></h3>
				<h4><div id="youtube-user"></div></h4>
				<p id="videoDescription"></p>
			</div>
			<div class="modal-footer">
				
			</div>
	    </div>

	</div>
</div>

<!-- FOOTER -->
<div width="100%">
	<img style="position: absolute; top: 3200px; repeat: repeat-x; overflow: hidden; right:0" src="images/grass.png" width="55%"/>
	<img style="position: absolute; top: 3200px; repeat: repeat-x; overflow: hidden;" src="images/grass.png" width="55%"/>
	<img id="click_me" src="images/click_me.png" style="position: absolute; top: 0; z-index: 100;"  />
	<img src="images/trampoline.png" width="50%" style="margin-left: 25%; margin-right: 30%; z-index:-1; position: absolute; top: 3025px;" />
</div>

<script src="//cdnjs.cloudflare.com/ajax/libs/parallax/1.1.1/jquery.parallax.min.js"></script>
<script src="//code.jquery.com/ui/1.11.3/jquery-ui.js"></script>
<script src="js/main.js"></script>

</body>
</html>
